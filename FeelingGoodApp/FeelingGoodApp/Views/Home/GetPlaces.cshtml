@using FeelingGoodApp.Services.Models

@model IEnumerable<Place>

@{
    ViewData["Title"] = "GetPlaces";
}

<h1>Display Places</h1>

<div class="col-md-12">

    @*//table table-bordered table-responsive table-striped*@
    <table class=" table-bordered table-dark table-hover table-striped">
        <thead>
            <tr>
                <th scope="col"></th>
                <th scope="col">Name</th>
                <th scope="col">Rating</th>
                <th scope="col">Type</th>

            </tr>
        </thead>
        <tbody>

            @foreach (var place in Model)
            {
                <tr>
                    <th scope="row"></th>
                    <td>@place.name</td>
                    <td>@place.rating</td>
                    <td>@ViewData["type"]</td>

                </tr>
            }
        </tbody>
    </table>

</div>