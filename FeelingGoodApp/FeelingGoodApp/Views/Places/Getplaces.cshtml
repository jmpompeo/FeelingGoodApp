@*@model IEnumerable<Places>*@

@{
    ViewData["Title"] = "GetPlaces";
}

<h1>Display Places</h1>

<div class="col-md-12">

    @*//table table-bordered table-responsive table-striped*@
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <table class=" table-bordered table-dark table-hover table-striped">
                    <thead>
                        <tr>
                            <th scope="col"></th>
                            <th scope="col">Name</th>
                            <th scope="col">Rating</th>
                            <th scope="col">Type</th>

                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var place in Model)
                        {
                            <tr>
                                <th scope="row"></th>
                                <td>@place.name</td>
                                <td>@place.rating</td>
                                <td>@ViewData["type"]</td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="col-sm-6">
                <h3><strong>Don't wait for motivation, do motivation! </strong></h3>
                <img src="~/css/images/ThePath-unsplash.jpg" class="img" />

            </div>
        </div>

    </div>

</div>